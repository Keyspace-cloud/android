                        android:layout_height="50dp"
                        android:padding="7.5dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_baseline_chip_24" />

                </LinearLayout>

            </LinearLayout>

